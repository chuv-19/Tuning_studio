<Page x:Class="Prototype.ContactsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Контакты">

    <Grid Background="Transparent">
        <Border Background="#2C2C2C" CornerRadius="18" Padding="36" HorizontalAlignment="Center" VerticalAlignment="Center" Width="740">
            <StackPanel>
                <TextBlock Text="Контакты тюнинг-ателье"
                           FontSize="28" FontWeight="Bold"
                           Foreground="#FF5722" TextAlignment="Center"
                           Margin="0,0,0,22"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <StackPanel Width="200" Margin="0,0,40,0">
                        <TextBlock Text="Телефон" Foreground="White" FontWeight="SemiBold" FontSize="16" Margin="21,0,0,0"/>
                        <TextBlock Text="+7 (921) 123-45-67" Foreground="#CCCCCC" FontSize="14" Margin="21,4,0,0"/>
                    </StackPanel>
                    <StackPanel Width="200" Margin="0,0,40,0">
                        <TextBlock Text="Email" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="info@tuningatelier.ru" Foreground="#CCCCCC" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel Width="200">
                        <TextBlock Text="Адрес" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="г. Санкт-Петербург, улица Маршала Казакова, 62к1" Foreground="#CCCCCC" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
                <!-- Здесь была карта, удалена -->
            </StackPanel>
        </Border>
    </Grid>
</Page>
