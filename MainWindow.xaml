<Window x:Class="Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tuning Studio" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        FontFamily="Segoe UI"
        Background="Transparent">

    <Window.Resources>
        <!-- Стиль с закруглёнными углами для кнопок -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E64A19"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BF360C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,-6.4,-1.6" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="178*"/>
        </Grid.RowDefinitions>
        <!-- Фон -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#121212" Offset="0"/>
                <GradientStop Color="#1E1E1E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Верхняя панель -->
        <Border Height="80" VerticalAlignment="Top" CornerRadius="14" Background="#292929" Margin="4,10,10,0" Grid.RowSpan="2">
            <DockPanel LastChildFill="False" Margin="10,0,0.4,0">
                <Image x:Name="LogoImage" Source="logo — копия.png" Height="60" Margin="18,0,0,0"
                       Cursor="Hand" MouseLeftButtonUp="LogoImage_Click"
                       DockPanel.Dock="Left" VerticalAlignment="Center"/>

                <!-- Кнопка меню слева с применением стиля -->
                <Button Content="☰" Width="60" Height="40" Margin="0,20,10,20"
                        DockPanel.Dock="Right"
                        Style="{StaticResource RoundedButtonStyle}"
                        FontSize="22"
                        Click="MenuButton_Click"/>

                <!-- Кнопка "Заказ" справа с применением стиля -->
                <Button Content="Заказ" Width="80" Height="40" Margin="0,20,20,20"
                        DockPanel.Dock="Right"
                        Style="{StaticResource RoundedButtonStyle}"
                        FontSize="16"
                        Click="OrderButton_Click"/>
            </DockPanel>
        </Border>

        <!-- Контент -->
        <Grid Margin="0,55.9,0,100" x:Name="ContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <Border Grid.Column="0" Background="#222222" CornerRadius="14" Padding="22" Margin="10,0,20,-0.3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ServicesPanel">
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="#FF5722" Margin="0,0,0,28" Text="НАШИ УСЛУГИ:"/>
                        <Button Content="Чип-тюнинг" FontSize="22" Margin="0,0,0,16"  FontWeight="Bold" Foreground="White" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" Click="ChipTuning_Click"/>
                        <Button Content="Выхлоп" FontSize="22" Margin="0,0,0,16" FontWeight="Bold" Foreground="White" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" Click="Exhaust_Click"/>
                        <Button Content="Тюнинг авто" FontSize="22" Margin="0,0,0,16"  FontWeight="Bold" Foreground="White" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" Click="AutoTuning_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Правая часть -->
            <Grid Grid.Column="1" Margin="0">
                <!-- Только одна строка -->
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0.4,-0.4,0.4"/>
            </Grid>
        </Grid>

        <!-- Контакты -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,12" Grid.Row="1">
            <Rectangle Height="1" Fill="#FF5722" Margin="0,0,0,12"/>
            <TextBlock Text="📍 Адрес: г. Санкт-Петербург, ул. Марашала Казакова, 62к1" Foreground="White" FontSize="16" Margin="10,0,0.4,0"/>
            <TextBlock Text="📞 Телефон: +7 (999) 123-45-67" Foreground="White" FontSize="16" Margin="10,0,0.4,0"/>
        </StackPanel>

        <!-- Меню -->
        <Border x:Name="SideMenu" Background="#FF5722" Width="250" HorizontalAlignment="Right" VerticalAlignment="Stretch"
                RenderTransformOrigin="1,0" Panel.ZIndex="10" Visibility="Collapsed" CornerRadius="14" Grid.RowSpan="2">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SideMenuTransform" X="250"/>
            </Border.RenderTransform>

            <StackPanel Margin="20" VerticalAlignment="Top">
                <TextBlock Text="Меню" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                <Button Content="Чип-тюнинг" Margin="0,0,0,10" FontSize="18" Click="ChipTuning_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                <Button Content="Выхлоп" Margin="0,0,0,10" FontSize="18" Click="Exhaust_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                <Button Content="Тюнинг авто" Margin="0,0,0,10" FontSize="18" Click="AutoTuning_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                <Button Content="Контакты" Margin="0,0,0,10" FontSize="18" Click="Contacts_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                <Button Content="Отзывы" Margin="0,0,0,10" FontSize="18" Click="Reviews_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                <Button Content="Авторизация" Margin="0,0,0,10" FontSize="18" Click="Autorization_Click"
                        Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
