<Page x:Class="Prototype.MainTextPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Добро пожаловать в Tuning Studio!"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,10"/>

        <!-- Подзаголовок -->
        <TextBlock Text="Мы предлагаем профессиональный чип-тюнинг, выхлопные системы и визуальный авто-тюнинг. 
Преобразите ваш автомобиль вместе с нами — качество, стиль и индивидуальность в каждой детали!"
                   FontSize="18"
                   Foreground="White"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="40,0,40,30"
                   Grid.Row="1"/>

        <!-- Изображения -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <!-- Первый прямоугольник -->
            <Border Width="216" Height="144" Margin="10" BorderBrush="White" BorderThickness="2" CornerRadius="14" ClipToBounds="True">
                <Rectangle RadiusX="14" RadiusY="14">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="chip.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Border>

            <!-- Второй прямоугольник -->
            <Border Width="218" Height="144" Margin="10" BorderBrush="White" BorderThickness="2" CornerRadius="14" ClipToBounds="True">
                <Rectangle RadiusX="14" RadiusY="14">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="vih.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Border>

            <!-- Третий прямоугольник -->
            <Border Width="226" Height="144" Margin="10" BorderBrush="White" BorderThickness="2" CornerRadius="14" ClipToBounds="True">
                <Rectangle RadiusX="14" RadiusY="14">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="tun.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Border>
        </StackPanel>
    </Grid>
</Page>
