<Page x:Class="Prototype.ExhaustPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="Выхлоп-тюнинг">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="30">

            <TextBlock Text="Выхлоп" FontSize="28" FontWeight="Bold"
                       Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <UniformGrid Columns="2" Rows="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="740">
                <Button Click="ShowCatalystRemoval" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Удаление катализатора" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowDownpipeInstall" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Установка Downpipe" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowExhaustRepair" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Ремонт выхлопа" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowGofraReplacement" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Замена гофры глушителя" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowExhaustSplit" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Раздвоение выхлопа" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowExhaustTipsInstall" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Установка выхлопных насадок" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowControlledExhaust" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Управляемый выхлоп" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>

                <Button Click="ShowOEMExhaustInstall" Background="Transparent" BorderThickness="0" Margin="10">
                    <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                        <TextBlock Text="Установка готовых OEM трасс" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </Border>
                </Button>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
