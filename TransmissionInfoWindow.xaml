<Window x:Class="Prototype.TransmissionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чип-тюнинг КПП и DSG" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-22,-21,-24.4,-25.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Чип-тюнинг коробок передач (КПП, DSG)"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Чип-тюнинг коробок передач, включая DSG, представляет собой программное изменение настроек работы КПП, направленное на оптимизацию времени переключения передач. Это улучшение обеспечивает более динамичный разгон автомобиля, повышает комфорт при движении в городских пробках и способствует увеличению срока службы трансмиссии за счёт снижения количества переключений за единицу времени.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="166" Width="260" Source="Снимок экрана 2025-06-11 030652.png" Stretch="Fill"/>
                        </Border>
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="166" Width="392" Source="dsg-gearbox-1600x660.jpg" Stretch="Fill"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Чип-тюнинг DSG и других АКПП" FontSize="16"  FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Сокращение времени переключения" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Более динамичный разгон" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Стоимость от 7 000 ₽" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>

                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Индивидуальная настройка под стиль вождения" FontSize="16"  FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Больше комфорта в пробках" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Продление срока службы трансмиссии" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
