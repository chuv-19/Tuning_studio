<Window x:Class="Prototype.ControlledExhaust"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управляемый выхлоп" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-21,-19,-22.4,-22.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Управляемый выхлоп"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Управляемый выхлоп позволяет регулировать громкость и тембр выхлопной системы, адаптируя звук под ваше настроение и условия движения. Мы предлагаем установку систем с дистанционным управлением, клапанами и настройкой параметров.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="159" Source="-AsyVXPlZfy_KDPAO9Lf1eQSAho-1920.jpg" Stretch="Fill" Width="227"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Установка систем управляемого выхлопа" FontSize="16"  FontWeight="Bold" Foreground="White" />
                                <TextBlock Text="от 4 500 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Подключение дистанционного управления" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 2 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Настройка параметров звука и работы" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 1 500 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
