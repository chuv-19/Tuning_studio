<Page x:Class="Prototype.ChipTuningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="Чип-тюнинг">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="211*"/>
        </Grid.RowDefinitions>

        <Border Background="Transparent" CornerRadius="12" Padding="30" Width="800"
                HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="2" Height="482" Margin="0,0,0,-0.4">
            <StackPanel>
                <TextBlock Text="Чип-тюнинг"
                           FontSize="24" FontWeight="Bold"
                           Foreground="White" TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <UniformGrid Columns="2" Rows="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="740" Height="367">
                    <Button Click="ShowPetrolInfo" Background="Transparent" BorderThickness="0" Margin="10">
                        <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                            <TextBlock Text="Бензиновые двигатели" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </Button>

                    <Button Click="ShowDieselInfo" Background="Transparent" BorderThickness="0" Margin="10">
                        <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="349">
                            <TextBlock Text="Дизельные двигатели" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </Button>

                    <Button Click="ShowAtmosphericInfo" Background="Transparent" BorderThickness="0" Margin="10">
                        <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                            <TextBlock Text="Атмосферные двигатели" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </Button>

                    <Button Click="ShowTurboInfo" Background="Transparent" BorderThickness="0" Margin="10">
                        <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="347">
                            <TextBlock Text="Турбированные двигатели" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </Button>

                    <Button Click="ShowTransmissionInfo" Background="Transparent" BorderThickness="0" Margin="10">
                        <Border Background="#3A3A3A" CornerRadius="8" Height="100" Width="340">
                            <TextBlock Text="Тюнинг КПП" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
