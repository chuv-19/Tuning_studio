<Window x:Class="Prototype.SuspensionTuning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доработка подвески" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-22,-21,-24.4,-25.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Доработка подвески"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Профессиональная доработка подвески позволяет улучшить управляемость, устойчивость и комфорт автомобиля. Мы предлагаем установку спортивных амортизаторов, пружин, стабилизаторов поперечной устойчивости и индивидуальную настройку подвески под ваши задачи.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="166" Width="325" Source="74aa44b782abef092e0f67a8ca574f38.jpeg" Stretch="Fill"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Установка спортивных амортизаторов и пружин" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="От 7 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Монтаж стабилизаторов поперечной устойчивости" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="От 4 500 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Индивидуальная настройка подвески" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="От 3000 рублей" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
