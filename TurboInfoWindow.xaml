<Window x:Class="Prototype.TurboInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Турбированные двигатели" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-22,-21,-24.4,-25.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Чип-тюнинг турбированных двигателей"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Турбированные двигатели позволяют добиться впечатляющей динамики и высокой эффективности. Чип-тюнинг раскрывает их потенциал, увеличивая мощность, крутящий момент и улучшая отклик на газ, при этом сохраняя надёжность и ресурс агрегата.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="166" Width="268" Source="i.jpg" Stretch="Fill"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Чип-тюнинг турбированных моторов" FontSize="16"  FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Прирост мощности до 30%" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Стоимость от 10 000 ₽" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Индивидуальная настройка" FontSize="16"  FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                                <TextBlock Text="• Максимальная отдача без потери ресурса" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Персональный подход" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
