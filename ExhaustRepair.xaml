<Window x:Class="Prototype.ExhaustRepair"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ремонт выхлопной системы" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-21,-19,-22.4,-22.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Ремонт выхлопной системы"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Профессиональный ремонт выхлопной системы для восстановления герметичности и производительности. Мы устраняем прогары, заменяем повреждённые элементы и восстанавливаем работоспособность системы.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="160" Source="XXXL.jpg" Stretch="Fill" Width="309"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Диагностика выхлопной системы" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 1 500 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Замена глушителей и резонаторов" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 3 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Ремонт сваркой прогоревших участков" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 800 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Настройка звука выхлопа" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 3 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
