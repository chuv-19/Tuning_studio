<Window x:Class="Prototype.PetrolInfoWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бензиновые двигатели" Height="600" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-21,-19,-22.4,-22.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Чип-тюнинг бензиновых двигателей"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Чип-тюнинг бензиновых двигателей — это эффективный способ увеличить мощность и улучшить отклик мотора без серьёзных вмешательств в конструкцию. Мы помогаем раскрыть потенциал вашего автомобиля, сохраняя надёжность и экономичность.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="140" Width="240" Source="U.jpg" Stretch="UniformToFill" />
                        </Border>
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="140" Width="240" Source="d7e6959s-1920.jpg" Stretch="UniformToFill" />
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Чип-тюнинг бензиновых моторов" FontSize="18" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="• Прирост мощности до 15%" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Стоимость от 4 500 ₽" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="• Экономичная настройка" FontSize="18" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="• Снижение расхода топлива" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Text="• Индивидуальный подход" FontSize="14" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
