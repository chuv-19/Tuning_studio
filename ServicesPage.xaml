<Page x:Class="Prototype.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Выбор услуг"
      Background="Transparent">

    <Page.Resources>
        <!-- Тень для Border -->
        <DropShadowEffect x:Key="DropShadowEffect" Color="#44000000" BlurRadius="15" ShadowDepth="5"/>

        <!-- Стиль кнопки с закруглёнными углами -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E64A19"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BF360C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для CheckBox внутри TreeView с белым текстом -->
        <Style TargetType="CheckBox" x:Key="TreeViewCheckBoxStyle">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Белый цвет текста -->
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid Height="593">
        <Border Background="Transparent" CornerRadius="12" Padding="30" Margin="40"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Выберите услуги"
                           FontSize="28" FontWeight="Bold" Foreground="White"
                           Margin="0,0,0,25"/>

                <!-- Обёртка с прокруткой для списка услуг -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Margin="0,0,0,20">
                    <TreeView ItemsSource="{Binding Services}"
                              BorderThickness="0"
                              Background="Transparent"
                              FontSize="16">

                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubServices}">
                                <CheckBox Content="{Binding Name}" 
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Style="{StaticResource TreeViewCheckBoxStyle}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </ScrollViewer>

                <!-- Кнопка Оформить заказ -->
                <Button Content="Оформить заказ"
                        Width="180" Height="45"
                        Style="{StaticResource RoundedButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="SubmitOrder_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
