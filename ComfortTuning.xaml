<Window x:Class="Prototype.ComfortTuning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тюнинг комфорта и стиля" Height="500" Width="800" Background="#2C2C2C"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Background="Transparent" CornerRadius="18" Padding="28" Margin="-21,-19,-22.4,-22.6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-18,-28.2,-28">
                <StackPanel>
                    <TextBlock Text="Тюнинг комфорта и стиля"
                               FontSize="28" FontWeight="Bold" Foreground="#FF5722"
                               Margin="0,0,0,16" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="#F3F3F3" Margin="0,0,0,18" TextAlignment="Center">
                        Повышайте комфорт и индивидуальность вашего автомобиля с помощью современных решений: установка доводчиков дверей, стильных дисков, аэродинамических обвесов и других аксессуаров для внешнего и внутреннего тюнинга.
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border CornerRadius="10" Margin="8" Background="#222" Padding="3">
                            <Image Height="216" Source="9e51b76s-1920.jpg" Stretch="Fill" Width="311"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Наши услуги:" FontSize="22" FontWeight="SemiBold" Foreground="#FF5722" Margin="0,0,0,14"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Установка доводчиков дверей" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 7 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Подбор и монтаж легкосплавных дисков" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 15 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="Transparent" CornerRadius="10" Margin="0,0,0,14" Padding="12" BorderBrush="#FF5722" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Установка аэродинамических обвесов и аксессуаров" FontSize="16"  FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="от 12 000 ₽" FontSize="14" Foreground="#AAAAAA" Margin="8,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
