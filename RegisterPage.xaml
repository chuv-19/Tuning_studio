<Page x:Class="Prototype.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="Регистрация">

    <Page.Resources>
        <!-- Стиль с радиусом скругления для кнопок -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E64A19"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BF360C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="#2C2C2C" CornerRadius="12" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Регистрация"
                           FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="ФИО" FontSize="16" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" Height="30"/>

                <TextBlock Text="Номер телефона" FontSize="16" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="PhoneTextBox" Height="30"/>

                <TextBlock Text="E-mail" FontSize="16" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="30"/>

                <TextBlock Text="Пароль" FontSize="16" Foreground="White" Margin="0,10,0,5"/>
                <Grid>
                    <PasswordBox x:Name="PasswordBox" Height="30" Padding="5" 
                                 Background="#444" Foreground="White" BorderBrush="Transparent" BorderThickness="1" 
                                 FontSize="14" Visibility="Visible" PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBox x:Name="PasswordTextBox" Height="30" Padding="5"
                             Background="#444" Foreground="White" BorderBrush="Transparent" BorderThickness="1"
                             FontSize="14" Visibility="Collapsed" TextChanged="PasswordTextBox_TextChanged"/>

                    <ToggleButton x:Name="ShowPasswordToggle" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"
                                  ToolTip="Показать/скрыть пароль"
                                  Checked="ShowPasswordToggle_Checked" Unchecked="ShowPasswordToggle_Unchecked"
                                  Background="Transparent" BorderThickness="0" Focusable="False">
                        <TextBlock FontSize="16" Text="👁" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" />
                    </ToggleButton>
                </Grid>

                <Button Content="Зарегистрироваться" Margin="0,20,0,0" Height="35"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="RegisterButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
